{% extends "base.html.twig" %}
{% block highlight %}allmovies{% endblock %}
{% block hero %}
    {%  include "partials/movie_hero.html.twig" with {'movie':  movie} %}
{% endblock %}
{% block title %}{{ movie.title }}{% endblock %}
{% block body %}

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">

            <ol>
                <li><a href="/">Home</a></li>
                <li><a href="/movies">Movies</a></li>
                <li>{{ movie.title }}</li>
            </ol>
            <h2>Movie details: {{ movie.title }}</h2>
        </div>
    </section><!-- End Breadcrumbs -->

    <section id="details" class="inner-page relative-section">
        <img id="movie-details-poster-image" src="{{ movie.profileImage }}" alt="movie poster cover">
        <div class="container">
            <p>
                {{ movie.description }}
            </p>
            <small>{{ movie.readableRuntime }}</small>
        </div>
    </section>
    <section id="reviews" class="faq">
        <div class="container-fluid">

            <div class="row">

                <div class="col-lg-7 d-flex flex-column justify-content-center align-items-stretch  order-2 order-lg-1">

                    <div class="content">
                        <h3>Latest movie <strong>Reviews</strong></h3>
                        <p>
                            Enjoy some of the latest quality review content on our platform right here, right now!
                        </p>
                    </div>

                    <div class="accordion-list">
                        <ul>
                            {% for review in movie.reviews %}
                                <li>
                                    <a data-bs-toggle="collapse" class="collapse" data-bs-target="#accordion-list-{{ review.id }}">{{ review.title }} ({{ review.movie.title }}) <i class="bx bx-chevron-down icon-show"></i><i class="bx bx-chevron-up icon-close"></i></a>
                                    <div id="accordion-list-{{ review.id }}" class="collapse {% if loop.first %}show{% endif %}" data-bs-parent=".accordion-list">
                                        <p>
                                            {{ review.description }}
                                        </p>
                                        <p><strong>~ {{ review.author }}</strong></p>
                                    </div>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>

                </div>

                <div class="col-lg-5 align-items-stretch order-1 order-lg-2 img" style="background-image: url('/assets/img/faq.jpg');">&nbsp;</div>
            </div>

        </div>
    </section><!-- End Faq Section -->
{% endblock %}